{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "src/*",
    "src/**/*",
  ],
  "exclude": [
    "__test__/*",
    "__test__/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "types": [
      "node"
    ],
  }
}